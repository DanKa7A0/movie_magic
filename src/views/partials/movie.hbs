{{#each movies}}
    <div class="flip flip-vertical">
        <div class="front">
            <img src="{{this.imgUrl}}" alt="{{this.title}}">
        </div>
        <div class="back">
            <h1>{{this.title}}</h1>
            <h2>Genre: {{this.genre}}</h2>
            <p>Description: {{this.description}}</p>
            <a href="/movies/details/{{this.id}}" class="details">Details</a>
        </div>
    </div>
{{else}}
    <div class="no-posts">
        <p class="no-offer">There are no movies...</p>
    </div>
{{/each}}
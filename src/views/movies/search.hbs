<section id="search">
    <h1>Search</h1>
    <form method="get" class="form">
        <input type="text" name="title" class="search" value="{{filter.title}}" placeholder="Title...">
        <input type="text" name="genre" class="genre" value="{{filter.genres}}" placeholder="Genre...">
        <input type="number" name="year" class="year" value="{{filter.year}}" placeholder="Year...">
        <input type="submit" value="search">
    </form>
</section>

<section id="catalog">
    <div class="band">
       {{>movie}}
    </div>
</section>